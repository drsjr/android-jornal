<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Journal" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Journal.Title1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30sp</item>
        <item name="android:minHeight">30sp</item>
    </style>

    <style name="TextAppearance.Journal.Title2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:minHeight">28sp</item>
    </style>

    <style name="TextAppearance.Journal.Title3">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:minHeight">28sp</item>
    </style>

    <style name="TextAppearance.Journal.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:minHeight">24sp</item>
    </style>

    <style name="TextAppearance.Journal.Body">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:minHeight">24sp</item>
    </style>

    <style name="TextAppearance.Journal.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:minHeight">20sp</item>
    </style>

    <style name="TextAppearance.Journal.Caption1">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:minHeight">20sp</item>
    </style>

    <style name="TextAppearance.Journal.Caption2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:minHeight">16sp</item>
    </style>

    <style name="TextAppearance.Journal.Micro">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">12sp</item>
        <item name="android:minHeight">12sp</item>
    </style>

