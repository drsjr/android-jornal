<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Journal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_900</item>
        <item name="colorOnPrimary">@color/white_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black_700</item>
        <item name="colorOnSecondary">@color/white_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/red_700</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorControlActivated">@color/white_700</item>

    </style>

    <style name="Theme.Journal.Splash" parent="Theme.Journal">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Journal.Toolbar" parent="Theme.Journal">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

</resources>